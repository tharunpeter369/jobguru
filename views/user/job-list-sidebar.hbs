    window.addEventListener('load', timee)
    function timee() {
        var dateGen = document.getElementsByClassName('dateGen')
        for (var i = 0; i < dateGen.length; i++) {
            timestamp = (dateGen[i].innerText).toString().substring(0, 8)
            date = new Date(parseInt(timestamp, 16) * 1000)
            Day = date.getDate();
            Month = date.getMonth();
            Hour = date.getHours();
            Minute = date.getMinutes();
            AMPM = 'AM'
            if (Day.toString().length == 1) Day = "0" + Day;
            if (Month.toString().length == 1) Month = "0" + Month;
            if (Minute.toString().length == 1) Minute = "0" + Minute;
            if (parseInt(Hour) > 12) {
                Hour = Hour - 12;
                AMPM = 'PM'
            }
            if (Hour.toString().length == 1) Hour = "0" + Hour;
            dateGen[i].innerHTML = ` ${Day}/${Month}/${date.getFullYear()} - ${Hour}:${Minute} ${AMPM}`;
        }
    }


